<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandBook.IntroductionPage"
              BackgroundColor="{StaticResource lightBlueColor}">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout HorizontalOptions="CenterAndExpand"
                     Margin="0,120,0,0"
                     VerticalOptions="CenterAndExpand">

            <Label Text="HandBook" HorizontalTextAlignment="Center" TextColor="{StaticResource whiteColor}"
                   FontAttributes="Bold"  
                   FontFamily="SF Grunge Sans" Font="54" />
            <Label Text="Write your thoughts Down" HorizontalTextAlignment="Center" Margin="20,40" TextColor="{StaticResource whiteColor}" />

        </StackLayout>
        <Label HorizontalTextAlignment="Center" 
               Text="Sign in to save all your and have excess to them from any deviceanywhere" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,60,0,0">
            <Button Text="Sign in"/>
            <Button Text="Sign up" />
        </StackLayout>
        <Button VerticalOptions="EndAndExpand" x:Name="btnSkip" Clicked="BtnSkip_Clicked" Text="Skip" Style="{StaticResource greyButton}"  Margin="20,100,20,0"/>
    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandBook.Views.RecycleBin.NoteBinPage">
    <ListView x:Name="NotesList"
              ItemTapped="NotesList_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Title}" Detail="{Binding PubDate}">
                    <TextCell.ContextActions>
                        <MenuItem Text="Delete Permanently" x:Name="btnDelete" Clicked="BtnDelete_Clicked" CommandParameter="{Binding .}"/>
                    </TextCell.ContextActions>
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandBook.NewNotesPage" >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" x:Name="btnSave" Clicked="BtnSave_Clicked" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="0">
     
        <Frame HasShadow="True" CornerRadius="0" BackgroundColor="{StaticResource lightestBlueColor}" Padding="10">
            <StackLayout Orientation="Horizontal" >
                <Label Text="Title :" FontAttributes="Bold" FontSize="Large" VerticalTextAlignment="Center"/>
                <Entry x:Name="txtTitle" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" 
                       MaxLength="30"  />
            </StackLayout>
        </Frame>
        <Frame  CornerRadius="0" BackgroundColor="{StaticResource lightBlueColor}" VerticalOptions="FillAndExpand">
            <ScrollView>
                <StackLayout>
                    <Editor x:Name="txtNewNote" Placeholder=" Details go here"  VerticalOptions="FillAndExpand" 
                            HorizontalOptions="FillAndExpand"   />
                </StackLayout>
            </ScrollView>
        </Frame>

    </StackLayout>
    
    
</ContentPage>
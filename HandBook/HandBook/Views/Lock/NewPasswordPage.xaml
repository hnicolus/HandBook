<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandBook.Views.Lock.NewPasswordPage">
    <ContentPage.Content>
        <StackLayout>
            
            <Entry x:Name="password1" Placeholder="Password" Keyboard="Password"/>
            <Entry x:Name="password2" Placeholder="Confirm Password" Keyboard="Password"/>
            <Label Text="Security Questions" />
            <Label Text="What is your nickName"/>
            <Entry x:Name="txtNickName" Placeholder="" />
            <Label  Text="What is your Favourite Color"/>
            <Entry x:Name="txtColor" Placeholder="" />
            <Button  Text="Lock" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
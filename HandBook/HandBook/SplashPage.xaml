<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandBook.SplashPage" BackgroundColor="{StaticResource lightBlueColor}">
    <StackLayout>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     Margin="0,120,0,0"
                     VerticalOptions="CenterAndExpand">
            
            <Label Text="HandBook" HorizontalTextAlignment="Center" TextColor="{StaticResource whiteColor}"
                   FontAttributes="Bold"  
                   FontFamily="SF Grunge Sans" Font="54" />
            <Label Text="Write your thoughts Down" HorizontalTextAlignment="Center" TextColor="{StaticResource whiteColor}" />

        </StackLayout>
        <Button Text="Get Started" Clicked="Button_Clicked" Margin="80,40" VerticalOptions="EndAndExpand"/>
    </StackLayout>
</ContentPage>
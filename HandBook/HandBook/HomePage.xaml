<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandBook.HomePage"
            Title="HandBook"
            xmlns:local="clr-namespace:HandBook">

    <TabbedPage.ToolbarItems>

        <ToolbarItem x:Name="btnShare" Text="Share App" Clicked="BtnShare_Clicked" Order="Secondary"/>
        <ToolbarItem x:Name="btnSettings" Text="Settings" Clicked="BtnSettings_Clicked" Order="Secondary"/>
        <ToolbarItem x:Name="btnAbout" Clicked="BtnAbout_Clicked" Text="About Us" Order="Secondary"/>
    </TabbedPage.ToolbarItems>
   
    <local:PersonalNotePage Title="Personal Notes" Icon="personalNotes.png"/>
    <local:LyricsPage Title="Music Lyrics" Icon="musicLyrics.png"/>
    <local:ToDoPage Title="ToDo List" Icon="toDoList.png" />
    
</TabbedPage>
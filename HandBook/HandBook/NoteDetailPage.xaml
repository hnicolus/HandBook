<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandBook.NoteDetailPage" BackgroundImage="background.png" >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" x:Name="btnDelete" Clicked="BtnDelete_Clicked" IsDestructive="True" />
        <ToolbarItem Text="Edit" x:Name="btnSave" Clicked="BtnEdit_Clicked" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="0">

        <Frame HasShadow="False"  CornerRadius="0" Padding="10">
            <StackLayout Orientation="Horizontal" >
                <Label Text="Title :" FontAttributes="Bold" FontSize="Large" VerticalTextAlignment="Center"/>
                <Label x:Name="txtTitle" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" VerticalTextAlignment="Center"  FontSize="Large"  />
            </StackLayout>
        </Frame> 
        <Frame HasShadow="False"  CornerRadius="0" VerticalOptions="FillAndExpand">
            <ScrollView>
                <StackLayout>
                    <Label x:Name="txtNewNote"   VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </ScrollView>
        </Frame>

    </StackLayout>
</ContentPage>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ApplicationIcon />
    <Win32Resource></Win32Resource>
    <Authors>Nicolas Maluleke</Authors>
    <Description>Are you a writer, Musician, student 
or idealist, well HandBook is the 
tool you have been lacking, say goodbye
to the old boring traditional note apps
and Say hello to 
a more beautiful and well
organized text Editor</Description>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>pdbonly</DebugType>
